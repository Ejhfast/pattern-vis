.patterns
  -@data.each do |datum|
    .pattern
      -unique_projects = datum[3].map{|d| d[0].split("/")[2]}.uniq.size
      .count= datum[2]
      .p_count
        %b
          =unique_projects.to_s
        projects
      .s1= datum[0]
      .s2= datum[1]
      .showHide
        %span.button
          show / hide
      .code
        -datum[3].each do |lst|
          %pre.block
            -highlight = lst[2].split("\n")
            -(0..1).each {|i| highlight[lst[3].to_i+i] = "<span class='highlight'>"+highlight[lst[3].to_i+i]+"</span>"}
            -highlight = highlight.join("\n")
            -
            ="## #{lst[0]} :: #{lst[1]}\n#{highlight}"            
      .clear

